<%- include("../partials/header") %>
	<div class="ui container segment">
		<div class="ui icon header">Edit <%= blog.title %></div>
		<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
			  <div class="field">
				<label>Title</label>
				<input type="text" name="blog[blogTitle]" value="<%= blog.blogTitle %>">
			  </div>
			  <div class="field">
				<label>Blog Image</label>
				<input type="text" name="blog[blogImage]" value="<%= blog.blogImage %>">
			  </div>
			 <div class="field">
				<label>Blog Post</label>
				<textarea name="blog[blogNews]"><%- blog.blogNews %></textarea>
			  </div>
			  <button class="ui button" type="submit">Submit</button>
</form>
	</div>
<%- include("../partials/footer") %>
